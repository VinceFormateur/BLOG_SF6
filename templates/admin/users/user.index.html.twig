{% extends 'admin/base.admin.html.twig' %}

{% block titleAdmin %}Utilisateurs{% endblock %}

{% block admin %}
    
<table class="table table-hover table-responsive-lg">

    <thead>
        <tr class="bg-dark text-title-h1">
            <th>Nom d'utilisateur</th>        
            <th>Email</th>
            <th>CreatedAt</th>
        </tr>
    </thead>

    <tbody>
    {% for user in users %}
        <tr data-href="{{ path('app_admin_show', {'id': user.id}) }}">
            <td class="
            {% if user.roles|json_encode == ["ROLE_ADMIN","ROLE_USER"] %}
                text-danger
            {% else %}
                text-info
            {% endif %}
            ">{{ user.username|upper }}</td>            
            <td>{{ user.email }}</td>
            <td>{{ user.createdAt|date('d/m/Y Ã  H\\hi') }}</td>
        </tr>             
    {% else %}
        <tr>
            <td colspan="9">Aucun Utilisateur</td>
        </tr>
    {% endfor %}
    </tbody>

</table>

{% endblock %}